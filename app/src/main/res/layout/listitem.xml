<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/list_item_image"
        style="@style/ImageTheme"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:contentDescription="@string/place_image_content_description"
        android:src="@drawable/mosque" />

    <TextView
        android:id="@+id/list_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_toEndOf="@+id/list_item_image"
        android:layout_toRightOf="@+id/list_item_image"
        android:hint="@string/list_item_name_hint"
        android:theme="@style/PrimaryText" />

    <TextView
        android:id="@+id/list_item_description"
        style="@style/SecondaryText"
        android:layout_below="@+id/list_item_name"
        android:layout_toEndOf="@+id/list_item_image"
        android:layout_toRightOf="@+id/list_item_image"
        android:hint="@string/list_item_description_hint" />

    <TextView
        android:id="@+id/list_item_address"
        style="@style/SecondaryText"
        android:layout_below="@+id/list_item_description"
        android:layout_toEndOf="@+id/list_item_image"
        android:layout_toRightOf="@+id/list_item_image"
        android:hint="@string/list_item_address_hint" />

</RelativeLayout>